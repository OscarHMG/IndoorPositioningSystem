<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/GreenMonteCarl" />
            <stroke
                android:width="1dp"
                android:color="@color/GreenMonteCarl" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/GreenMonteCarl"
                android:endColor="@color/GreenMonteCarl"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/GreenMonteCarl" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>